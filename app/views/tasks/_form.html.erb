<%= form_with model: @task, local: true do |form| %>
  <div class="card shadow-sm p-4">
    <h2 class="mb-4">Task Form</h2>

    <!-- Title Field -->
    <div class="mb-3">
      <%= form.label :title, "Task Title", class: "form-label fw-bold" %>
      <%= form.text_field :title, class: "form-control", placeholder: "Enter task title..." %>
    </div>

    <!-- Completed Checkbox -->
    <div class="form-check mb-4">
      <%= form.check_box :completed, class: "form-check-input" %>
      <%= form.label :completed, "Mark as Completed", class: "form-check-label" %>
    </div>

    <!-- Submit Button -->
    <div>
      <%= form.submit "Save Task", class: "btn btn-primary btn-lg w-100" %>
    </div>
  </div>
<% end %>
