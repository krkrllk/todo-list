<h1 class="mb-4">To-Do List</h1>
<%= link_to 'New Task', new_task_path, class: "btn btn-primary mb-3" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td>
          <span class="badge <%= task.completed ? 'bg-success' : 'bg-warning' %>">
            <%= task.completed ? "Completed" : "Pending" %>
          </span>
        </td>
        <td>
          <%= link_to 'Edit', edit_task_path(task), class: "btn btn-sm btn-outline-secondary" %>
          <%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
