<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <!-- Card with shadow for better appearance -->
      <div class="card shadow-sm">
        <!-- Card Header -->
        <div class="card-header bg-primary text-white text-center">
          <h2 class="mb-0"><%= action_name.capitalize %> Task</h2>
        </div>

        <!-- Card Body with Form -->
        <div class="card-body">
          <%= form_with model: @task, local: true do |form| %>
            <!-- Task Title -->
            <div class="mb-4">
              <%= form.label :title, "Task Title", class: "form-label fw-semibold" %>
              <%= form.text_field :title, class: "form-control", placeholder: "Enter task title", autofocus: true %>
            </div>

            <!-- Completed Checkbox -->
            <div class="form-check form-switch mb-4">
              <%= form.check_box :completed, class: "form-check-input" %>
              <%= form.label :completed, "Mark as Completed", class: "form-check-label" %>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-between">
              <%= form.submit "Save Task", class: "btn btn-success px-4" %>
              <%= link_to "Back to Tasks", tasks_path, class: "btn btn-outline-secondary px-4" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
