<h1 class="mb-4"><%= action_name.capitalize %> Task</h1>

<div class="card">
  <div class="card-body">
    <%= form_with model: @task, local: true do |form| %>
      <div class="mb-3">
        <%= form.label :title, class: "form-label" %>
        <%= form.text_field :title, class: "form-control", placeholder: "Enter task title" %>
      </div>
      <div class="form-check mb-3">
        <%= form.check_box :completed, class: "form-check-input" %>
        <%= form.label :completed, "Completed", class: "form-check-label" %>
      </div>
      <%= form.submit class: "btn btn-primary" %>
      <%= link_to 'Back', tasks_path, class: "btn btn-secondary" %>
    <% end %>
  </div>
</div>
